	<servlet>
		<servlet-name>GgSrsXSLT</servlet-name>
		<servlet-class>de.uka.ipd.idaho.goldenGateServer.srs.webPortal.XsltServlet</servlet-class>
		<init-param>
			<param-name>configFile</param-name>
