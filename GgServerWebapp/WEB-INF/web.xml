		<url-pattern>/html.rss.xml</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GgSrsRssFeeder</servlet-name>
		<url-pattern>/taxonx.rss.xml</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>GgSrsCollectionStatistics</servlet-name>
		<servlet-class>de.uka.ipd.idaho.goldenGateServer.scs.client.ScsStatisticsServlet</servlet-class>
		<init-param>
			<param-name>dataPath</param-name>
			<param-value>srsReportData</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>GgSrsCollectionStatistics</servlet-name>
		<url-pattern>/srs_reports</url-pattern>
	</servlet-mapping>
